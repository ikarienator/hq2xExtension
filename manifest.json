{
  "name": "hq2x Filter for HiDPI display",
  "version": "1.2",
  "manifest_version": 2,
  "description": "hq2x Filter for HiDPI display.",
  "permissions": [
    "http://*/",
    "https://*/"
  ],
  "background": {
    "scripts": ["hqx.js", "background.js"]
  },
  "icons": {
    "128": "hq2x.png"
  },
  "incognito": "split",
  "content_scripts": [
    {
      "all_frames": true,
      "matches": ["http://*/*", "https://*/*"],
      "js": ["perform.js"]
    }
  ]
}